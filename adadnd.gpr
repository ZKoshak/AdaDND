project AdaDND is

   for Languages use ("Ada");
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Main use ("src/Main.adb");
   
   for Create_Missing_Dirs use "True";

   package Compiler is
      for Switches ("ada") use ("-gnatws=:v", "-gnat2022", "-g", "-O2");
   end Compiler;
   
   package Builder is
      for Executable ("Main.adb") use "adadnd";
   end Builder;

end AdaDND;
