project AdaDND is

   for Main use ("Main.adb");
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Languages use ("ada", "c");
   
   for Create_Missing_Dirs use "True";

   package Compiler is
      for Switches ("ada") use ("-gnatws=:v", "-gnat2022", "-g", "-O2");
   end Compiler;

end AdaDND;
